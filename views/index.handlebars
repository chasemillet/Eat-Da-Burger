<div class="container">	
	<div class="jumbotron"> 
		<iframe src="https://giphy.com/embed/suNxrJ7Gpudd6" width="480" height="270" frameBorder="0" class="giphy-embed" 
        allowFullScreen></iframe><p><a href="https://giphy.com/gifs/reaction-mrw-indica-suNxrJ7Gpudd6">via GIPHY</a></p> 
		<h1> Eat-Da-Burger! </h1>
	</div>

	{{!-- burger list before being eaten --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<div class="panel-panel default">
				<ul class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-lg" type="submit"> Devour It! </button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>


		{{!-- Burgers that are eaten --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<div class="panel panel-default">
				<ul class="list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<p class="lead">{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="col-md-10 col-md-offset-1">
		<p class="lead"> Name burger below and EAT IT! </p>

		{{!-- Add Burger --}}
		<form class="create-update-form" action="burgers/create" method="POST">

			<div class="form-group">
				<textarea class="form-control input-lg" type="text" name="b_name" rows="3"> </textarea>
			</div>

			<button class="btn btn-default btn-lg" type="submit">Add Burger!</button>
		</form>
	</div>
</div>

<style>
    body{
        background-color: green;
    }
    .jumbotron{
        background-color: blueviolet;
    }
</style>